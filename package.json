{
  "name": "mt4-trading-system",
  "version": "1.0.0",
  "description": "MT4交易监控系统",
  "scripts": {
    "client": "cd client && npm start",
    "server": "cd server && npm start",
    "collector": "cd mt4-collector && npm start",
    "dev": "concurrently \"npm run server\" \"npm run collector\"",
    "start": "node server/server.js"
  },
  "devDependencies": {
    "concurrently": "^8.0.1"
  },
  "workspaces": [
    "client",
    "server",
    "mt4-collector"
  ]
}
